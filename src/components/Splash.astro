---
import backgroundCode from "../assets/code_background.jpg"
import Branding from "./Branding.astro"
import Button from "./Button.astro"

const introMessage = "I am a Full Stack Web Developer. I provide services that span from simple single page static websites to fully interactive web apps with powerful APIs."
---
<section class="relative w-screen h-screen">
    <img src={backgroundCode} class="opacity-60 h-screen w-screen absolute z-[-1] object-cover"/>
    <Branding/>

    <div class="md:w-3/4 absolute left-1/3 top-1/3 gap-12 flex flex-col max-w-1/2`">
        <h1 class="text-4xl font-bold text-accent-green bolder z-10 text-[42px]">Hey, I'm Nathan</h1>

        <p class="text-white font-semibold text-3xl">{introMessage}</p>
    </div>

    <div class="flex flex-col gap-10 absolute">
        <Button type="primary" label="Primary Test" className={''} />
        <Button type="secondary" label="Secondary Test" className={''} />
    </div>
    

    <div class="">
        
    </div>
    
</section>