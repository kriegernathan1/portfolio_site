---
import PrimaryButton from './PrimaryButton.astro';
import SecondaryButton from './SecondaryButton.astro';

export interface Props {
    label: string
    type: 'primary' | 'secondary'
    className?: string
};
const { label, type, className } = Astro.props
---
{type == 'primary' && <PrimaryButton label={label} className={className}/>}
{type == 'secondary' && <SecondaryButton label={label} className={className}/>}