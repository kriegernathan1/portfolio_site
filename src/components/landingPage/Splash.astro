---
import backgroundCode from "../../assets/code_background.jpg"
import { Icon } from 'astro-icon'

const introMessage = "I am a Full Stack Web Developer. I provide services that span from simple single page static websites to fully interactive web apps with powerful APIs."
---
<style>
    .typewriter{
        overflow: hidden; /* Ensures the content is not revealed until the animation */
        border-right: 2px solid orange; /* The typwriter cursor */
        white-space: nowrap; /* Keeps the content on a single line */
        
        animation: 
            typing 1.5s steps(40, end),
            blink-caret .55s step-end infinite forwards;
    }

    .typewriter::-webkit-scrollbar {
        display: none;
    }

    /* The typing effect */
    @keyframes typing {
        from { width: 0 }
        to { width: 350px;}
    }

    /* The typewriter cursor effect */
    @keyframes blink-caret {
        from, to { border-color: transparent }
        50% { border-color: white}
    }

    .slide-from-left {
        position: relative;
        transform: translateX(150%);

        animation:
            slide-from-left 1.5s forwards;
        animation-delay: 1.5s;
    }

    @keyframes slide-from-left {
        from {
            transform: translateX(-150%); 
        } 
        to {
            transform: translateX(0);
        }
    }

    .fizzle-in {
        opacity: 0;
        animation: fizzle-in 1s forwards;
        animation-delay: 2.5s;
    }

    @keyframes fizzle-in {
        from {
            opacity: 0;
        }
        to {
            opacity: 100;
        }
    }
</style>


